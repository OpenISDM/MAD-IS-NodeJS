doctype html
html(ng-app="MAD")
	head
		meta(charset='utf-8')
		meta(name='viewport', content='user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimal-ui')
		meta(http-equiv="X-UA-Compatible", content="IE=edge,chrome=1")
		meta(name="apple-mobile-web-app-capable", content="yes")
		meta(name="apple-mobile-web-app-status-bar-style", content="yes")

		title= title


		link(rel='shortcut icon', href='/img/font/favicon.png', type='image/x-icon')
		link(rel='stylesheet', href='/css/mobile-angular-ui-hover.min.css')
		link(rel='stylesheet', href='/css/mobile-angular-ui-base.min.css')
		link(rel='stylesheet', href='/css/mobile-angular-ui-desktop.min.css')
		link(rel='stylesheet', href='/css/app.css')
		link(rel='stylesheet', href='//cdn.leafletjs.com/leaflet-0.7.1/leaflet.css')

	body(ng-controller="MainController",ui-prevent-touchmove-defaults)
		block content
		
		script(src='//cdnjs.cloudflare.com/ajax/libs/angular.js/1.5.0/angular.min.js')
		script(src='//cdnjs.cloudflare.com/ajax/libs/angular.js/1.5.0/angular-route.min.js')
		script(src='//cdn.leafletjs.com/leaflet/v0.7.7/leaflet.js')

		script(src='/js/lib/angular/angular-leaflet-directive.min.js')
		script(src='/js/lib/angular/mobile-angular-ui.min.js')
		script(src='/js/lib/angular/mobile-angular-ui.gestures.min.js')

		script(src='/js/app.module.js')
		script(src='/js/app.config.js')
		script(src='/js/app.service.js')
		script(src='/js/app.run.js')
		script(src='/js/app.controller.js')
